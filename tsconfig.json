{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ]
}